{
  "root": true,
  "ignorePatterns": ["**/*"],
  "extends": [
    "plugin:unicorn/recommended",
    "plugin:testing-library/react",
    "plugin:jest-dom/recommended",
    "xo",
    "xo-react/space",
    "plugin:@tanstack/eslint-plugin-query/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "unicorn",
    "testing-library",
    "prefer-arrow",
    "jest-dom",
    "@nx",
    "simple-import-sort",
    "@tanstack/query"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        // NX
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:core",
                "onlyDependOnLibsWithTags": ["type:core"]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:core", "type:util"]
              },
              {
                "sourceTag": "type:data",
                "onlyDependOnLibsWithTags": [
                  "type:core",
                  "type:util",
                  "type:data"
                ]
              },
              {
                "sourceTag": "type:state",
                "onlyDependOnLibsWithTags": [
                  "type:core",
                  "type:util",
                  "type:state",
                  "type:data"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "type:core",
                  "type:util",
                  "type:state",
                  "type:ui"
                ]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:core",
                  "type:util",
                  "type:state",
                  "type:data",
                  "type:ui",
                  "type:feature"
                ]
              },
              {
                "sourceTag": "type:page",
                "onlyDependOnLibsWithTags": [
                  "type:core",
                  "type:util",
                  "type:ui",
                  "type:state",
                  "type:feature",
                  "type:testutil",
                  "type:page"
                ]
              },
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ],
        // React Query
        "@tanstack/query/exhaustive-deps": "error",
        "@tanstack/query/prefer-query-object-syntax": "error",
        // Sort
        "simple-import-sort/exports": "error",
        "simple-import-sort/imports": [
          "error",
          {
            "groups": [
              // Side effects first e.g. 'server-only'
              ["^\\u0000"],
              // `react`, `next
              ["^(react|next)"],
              // Other npm libraries.
              ["^@?\\w"],
              // Internal packages
              ["^(@jobstash)(/.*/core|$)", "^(@jobstash)(/.*/utils|$)"],
              ["^(@jobstash)(/.*/state|$)", "^(@jobstash)(/.*/data|$)"],
              ["^(@jobstash)(/.*/ui|$)", "^(@jobstash)(/.*/feature|$)"],
              // Parent imports `..`
              ["^\\.\\.(?!/?$)", "^\\.\\./?$"],
              // Other relative imports '.'
              ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"]
            ]
          }
        ],
        // Enforce arrow functions
        "prefer-arrow/prefer-arrow-functions": [
          "error",
          {
            "disallowPrototype": true,
            "singleReturnOnly": true,
            "classPropertiesAllowed": false
          }
        ],
        // Override xo default
        "react/boolean-prop-naming": [
          "error",
          { "rule": "^(is|has)[A-Z]([A-Za-z0-9]?)+" }
        ],
        "react/react-in-jsx-scope": "off",
        "react/function-component-definition": [
          "error",
          {
            "namedComponents": "arrow-function",
            "unnamedComponents": "arrow-function"
          }
        ],
        "react/require-default-props": "off",
        "no-unused-expressions": [
          "error",
          {
            "allowTernary": true
          }
        ],
        "no-warning-comments": "warn",
        "dot-notation": "off",
        "new-cap": "off",
        "@typescript-eslint/no-unused-vars": "error",
        "import/no-anonymous-default-export": "off",
        // override unicorn lint
        "unicorn/prefer-module": "off",
        "unicorn/no-empty-file": "off",
        "unicorn/filename-case": [
          "error",
          {
            "cases": {
              "kebabCase": true
            }
          }
        ],
        "unicorn/prevent-abbreviations": "off",
        "unicorn/no-null": "off"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    }
  ]
}
